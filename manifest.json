{
  "manifest_version": 2,
  "name": "BlockIt",
  "description": "A way to stop procrastination",
  "version": "0.1",
  
  "icons": {
	"128": "img/icon_128.png",
	"64": "img/icon_64.png",
	"48": "img/icon_48.png",
	"16": "img/icon_16.png"
  },
  
  "background": {
	"scripts":["js/background.js"]
  },
  
  "permissions": [
	"storage",
	"notifications",
	"webRequest",
	"webRequestBlocking",
	"<all_urls>"
  ],

  "browser_action": {
	"default_popup": "popup.html"
  },
  
  "options_page": "options.html"
}