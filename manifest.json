{
  "manifest_version": 2,
  "name": "BlockIt",
  "description": "A way to stop procrastination",
  "version": "0.1",
  
  "background": {
	"scripts":["background.js"],
	"persistent": true
  },
  
  "permissions": [
	"alarms",
	"storage",
	"notifications",
	"<all_urls>"
  ],

  "browser_action": {
	"default_popup": "popup.html"
  },
  
  "options_page": "options.html"
}